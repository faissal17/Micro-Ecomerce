generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Product {
  id          Int         @id @default(autoincrement()) @unique
  name        String      @unique 
  price       Int
  description String
  categorieId Int
  Image       String      @default("https://res.cloudinary.com/dmhcnhtng/image/upload/v1643044376/avatars/default_pic_jeaybr.png")
  category    Categories  @relation(fields: [categorieId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Categories {
  id        Int      @id @default(autoincrement()) @unique
  name      String   @unique 
  product   Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}